<style>
    .votaciones-container {
        padding: 30px;
        max-width: 1400px;
        margin: 0 auto;
    }

    .page-header {
        background: white;
        border-radius: 16px;
        padding: 30px;
        margin-bottom: 30px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 20px;
    }

    .page-header h1 {
        margin: 0 0 8px 0;
        color: #2d3748;
        font-size: 32px;
        font-weight: 700;
    }

    .page-header p {
        margin: 0;
        color: #718096;
        font-size: 16px;
    }

    .stats-summary {
        display: flex;
        gap: 30px;
    }

    .summary-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 16px 24px;
        background: #f7fafc;
        border-radius: 12px;
    }

    .summary-value {
        font-size: 32px;
        font-weight: 700;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .summary-label {
        font-size: 13px;
        color: #718096;
        font-weight: 600;
    }

    .ranking-section {
        margin-bottom: 30px;
    }

    .ranking-section h2 {
        color: #2d3748;
        font-size: 24px;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .ranking-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 24px;
    }

    .ranking-card {
        background: white;
        border-radius: 16px;
        padding: 30px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        text-align: center;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .ranking-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
    }

    .ranking-card.first-place::before {
        background: linear-gradient(90deg, #ffd700, #ffed4e);
    }

    .ranking-card.second-place::before {
        background: linear-gradient(90deg, #c0c0c0, #e8e8e8);
    }

    .ranking-card.third-place::before {
        background: linear-gradient(90deg, #cd7f32, #e5a76b);
    }

    .ranking-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
    }

    .rank-badge {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        position: relative;
        font-size: 28px;
        font-weight: 700;
        color: white;
    }

    .rank-badge.gold {
        background: linear-gradient(135deg, #ffd700, #ffed4e);
        box-shadow: 0 8px 20px rgba(255, 215, 0, 0.3);
    }

    .rank-badge.silver {
        background: linear-gradient(135deg, #c0c0c0, #e8e8e8);
        box-shadow: 0 8px 20px rgba(192, 192, 192, 0.3);
        color: #4a5568;
    }

    .rank-badge.bronze {
        background: linear-gradient(135deg, #cd7f32, #e5a76b);
        box-shadow: 0 8px 20px rgba(205, 127, 50, 0.3);
    }

    .rank-badge svg {
        position: absolute;
        bottom: -5px;
        width: 20px;
        height: 20px;
    }

    .ranking-card h3 {
        margin: 0 0 20px 0;
        color: #2d3748;
        font-size: 20px;
        font-weight: 600;
    }

    .score-display {
        margin-bottom: 12px;
    }

    .score-bar {
        height: 8px;
        background: #e2e8f0;
        border-radius: 4px;
        overflow: hidden;
        margin-bottom: 8px;
    }

    .score-fill {
        height: 100%;
        background: linear-gradient(90deg, #667eea, #764ba2);
        border-radius: 4px;
        transition: width 1s ease;
    }

    .score-value {
        font-size: 24px;
        font-weight: 700;
        color: #2d3748;
    }

    .votes-count {
        color: #718096;
        font-size: 14px;
    }

    .results-section {
        background: white;
        border-radius: 16px;
        padding: 30px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .results-section h2 {
        color: #2d3748;
        font-size: 24px;
        font-weight: 600;
        margin-bottom: 24px;
    }

    .results-table {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .table-header, .table-row {
        display: grid;
        grid-template-columns: 100px 1fr 120px 100px 200px;
        gap: 20px;
        align-items: center;
        padding: 16px;
        border-radius: 12px;
    }

    .table-header {
        background: #f7fafc;
        font-weight: 600;
        color: #4a5568;
        font-size: 14px;
    }

    .table-row {
        background: white;
        border: 1px solid #e2e8f0;
        transition: all 0.3s ease;
    }

    .table-row:hover {
        background: #f7fafc;
        border-color: #cbd5e0;
    }

    .position-badge {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        border-radius: 8px;
        font-weight: 700;
        background: #edf2f7;
        color: #4a5568;
    }

    .position-badge.pos-1 {
        background: linear-gradient(135deg, #ffd700, #ffed4e);
        color: white;
    }

    .position-badge.pos-2 {
        background: linear-gradient(135deg, #c0c0c0, #e8e8e8);
        color: #4a5568;
    }

    .position-badge.pos-3 {
        background: linear-gradient(135deg, #cd7f32, #e5a76b);
        color: white;
    }

    .team-info {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .team-avatar {
        width: 40px;
        height: 40px;
        border-radius: 8px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 700;
        font-size: 14px;
    }

    .score-highlight {
        font-size: 20px;
        font-weight: 700;
        color: #667eea;
    }

    .mini-chart {
        display: flex;
        gap: 4px;
        align-items: flex-end;
        height: 40px;
    }

    .chart-bar {
        flex: 1;
        background: linear-gradient(180deg, #667eea, #764ba2);
        border-radius: 4px 4px 0 0;
        min-height: 8px;
        display: flex;
        align-items: flex-start;
        justify-content: center;
        font-size: 10px;
        color: white;
        font-weight: 600;
        padding-top: 2px;
    }
</style>