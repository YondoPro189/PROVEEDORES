@model PROVEEDORES.Models.Proveedor

@{
    ViewData["Title"] = "Eliminar Proveedor";
}

<h1 class="mt-3 text-danger">Eliminar Proveedor</h1>

<h4>¿Está seguro que desea eliminar este proveedor?</h4>
<hr />

<div class="border p-3 rounded">
    <dl class="row">
        <dt class="col-sm-3">Empresa</dt>
        <dd class="col-sm-9">@Model.NombreEmpresa</dd>

        <dt class="col-sm-3">Contacto</dt>
        <dd class="col-sm-9">@Model.Contacto</dd>

        <dt class="col-sm-3">Teléfono</dt>
        <dd class="col-sm-9">@Model.Telefono</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Activo</dt>
        <dd class="col-sm-9">@((Model.Activo) ? "Sí" : "No")</dd>
    </dl>
</div>

<form asp-action="EliminarProveedor" asp-controller="Proveedor" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" asp-controller="Proveedor" class="btn btn-secondary">Cancelar</a>
</form>
