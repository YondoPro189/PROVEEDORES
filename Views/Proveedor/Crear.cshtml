@model PROVEEDORES.Models.Proveedor

@{
    ViewData["Title"] = "Agregar Proveedor";
}

<h1 class="mt-3">Agregar Proveedor</h1>

<hr />

<form asp-action="Crear" asp-controller="Proveedor" method="post">
    <div class="form-group mb-3">
        <label asp-for="NombreEmpresa" class="form-label"></label>
        <input asp-for="NombreEmpresa" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="Contacto" class="form-label"></label>
        <input asp-for="Contacto" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="Telefono" class="form-label"></label>
        <input asp-for="Telefono" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-check mb-3">
        <input asp-for="Activo" class="form-check-input" />
        <label asp-for="Activo" class="form-check-label"></label>
    </div>
    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" asp-controller="Proveedor"  class="btn btn-secondary">Volver</a>
</form>
