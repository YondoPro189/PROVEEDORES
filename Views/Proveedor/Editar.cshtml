@model PROVEEDORES.Models.Proveedor

@{
    ViewData["Title"] = "Editar Proveedor";
}

<h1 class="mt-3">Editar Proveedor</h1>

<hr />

<form asp-action="Editar" asp-controller="Proveedor" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="form-group mb-3">
        <label class="form-label">Nombre de la Empresa</label>
        <input name="NombreEmpresa" class="form-control" value="@Model.NombreEmpresa" />
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Contacto</label>
        <input name="Contacto" class="form-control" value="@Model.Contacto" />
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Tel√©fono</label>
        <input name="Telefono" class="form-control" value="@Model.Telefono" />
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Email</label>
        <input name="Email" class="form-control" value="@Model.Email" />
    </div>

    <div class="form-check mb-3">
        <input type="checkbox" name="Activo" class="form-check-input" @(Model.Activo ? "checked" : "") />
        <label class="form-check-label">Activo</label>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" asp-controller="Proveedor" class="btn btn-secondary">Volver</a>
</form>
