@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div style="padding: 40px; text-align: center;">
    <h1 style="color: #e53e3e; font-size: 48px;">😕 Oops!</h1>
    <h2 style="color: #2d3748;">Algo salió mal</h2>
    
    @if (Model?.ShowRequestId == true)
    {
        <p style="color: #718096; margin-top: 20px;">
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }
    
    <a href="/" style="display: inline-block; margin-top: 30px; padding: 12px 30px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; text-decoration: none; border-radius: 8px; font-weight: 600;">
        Volver al Inicio
    </a>
</div>